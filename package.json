{
  "name": "lofi-tab-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "*.{md,json}": [
      "sh -c \"pnpm format\""
    ],
    "*.{js,jsx,ts,tsx}": [
      "sh -c \"pnpm format\"",
      "sh -c \"pnpm lint\"",
      "sh -c \"pnpm check-types\""
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
